<div align="center">
    <h3>Post a New Question</h3>
    <%= simple_form_for @question, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :user, :as => :hidden, :input_html => { :value => current_user.id }%>
        <%= f.input :title, :required => true %>
        <%= f.input :body, :required => true %>
        <div>
            </br>
            <%= f.button :submit, 'Post Question', :class=> "btn btn-primary" %>
        </div>
        <% end %>
</div>